<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/message_single_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/message_single_propic"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:src="@drawable/default_pro_pic" />

    <TextView
        android:id="@+id/message_single_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/message_single_propic"
        android:text="Username"
        android:textColor="@android:color/black"
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/message_single_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/message_single_username"
        android:layout_below="@+id/message_single_username"
        android:padding="0dp"
        android:text="Message Text"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/message_single_time_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/message_single_username"
        android:layout_alignBottom="@+id/message_single_username"
        android:layout_marginStart="10dp"
        android:layout_marginTop="2dp"
        android:layout_toEndOf="@+id/message_single_username"
        android:text="00:00"
        android:textSize="12sp" />

</RelativeLayout>
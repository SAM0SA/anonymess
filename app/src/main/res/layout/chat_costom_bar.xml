<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/chat_costom_bar_img"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/default_pro_pic" />

    <TextView
        android:id="@+id/chat_costom_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/chat_costom_bar_img"
        android:layout_marginStart="18dp"
        android:layout_toEndOf="@+id/chat_costom_bar_img"
        android:text="Username"
        android:textColor="@color/statusbarColorWhite"
        android:textSize="18sp" />

</RelativeLayout>
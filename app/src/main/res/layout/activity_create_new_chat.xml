<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.samhith.anonymess.CreateNewChatActivity">

    <Button
        android:id="@+id/create_new_activity_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="@color/colorPrimaryDark"
        android:text="SEND"
        android:textColor="@color/statusbarColorWhite" />

    <EditText
        android:id="@+id/create_new_textbox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/input_outline"
        android:ems="10"
        android:gravity="top"
        android:hint="Whats Happening?"
        android:inputType="textMultiLine"
        android:lines="20"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textSize="22sp" />

</RelativeLayout>
